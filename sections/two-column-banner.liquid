<div
  class="section-two-column-links"
  data-height-option="{{ section.settings.height_option }}"
>

  {% for block in section.blocks %}
    <a href="{{ block.settings.url_1 }}" style="text-decoration: none; color: unset;" {{ block.shopify_attributes }}>
    <div class="image image--{{ block.settings.placement }}" 
         {% if section.settings.height_option == 'fixed' %}
         style="height: 70vh;"
         {% elsif section.settings.height_option == 'full' %}
         style="height: 100vh;"
         {% endif %}>
      <div class="image__content">
        {%- if block.settings.text != '' %}
          <span class="text" style="color: {{ block.settings.text_color }}">{{ block.settings.text }}</span>
        {%- endif -%}
        {%- if block.settings.title != '' %}
          <h3 class="title" style="color: {{ block.settings.text_color }}">{{ block.settings.title }}</h3>
        {%- endif -%}
        <div class="image__btns-wrapper">
        {% if block.settings.text_url_1 != "" %}
            <span class="btn" style="color: {{ block.settings.text_color }}; border-color: {{ block.settings.text_color }}; --hover-text-color: {{ block.settings.hover_text_color }}; --text-color: {{ block.settings.text_color }};">{{ block.settings.text_url_1 }}</span>   
        {% endif %}
        </div>
      </div>

      {%- liquid
        assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
        assign image_class = ''
        assign sizes = '100vw'
      -%}
      {{
        block.settings.image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          width: block.settings.image.width,
          height: image_height,
          class: image_class,
          sizes: sizes,
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
      }}
    </div>
    </a>
  {% endfor %}
</div>


<style>
    .section-two-column-links {
    display: block;
    clear: both;
    overflow: hidden;
}

.section-two-column-links .image {
    width: 50%;
    height: 50%;
    overflow: hidden;
    float: left;
    position: relative;
}

.section-two-column-links .image + .image{
    border-right: none;
}

.section-two-column-links .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.section-two-column-links .title{
    font-size: 60px;
    margin: 0;
}

.section-two-column-links .text{
    text-transform: uppercase;
    font-size: 12px;
}

.section-two-column-links .image .btn {
    z-index: 2;
    text-transform: uppercase;
    display: flex;
    flex-shrink: 0;
    text-decoration: none;
    padding: 5px 30px;
    border-radius: 20px;
    position: relative;
    overflow: hidden;
    border-width: 1px;
    border-style: solid;
    transition: all 0.3s ease-in-out;
}

.section-two-column-links .image .btn:hover {
    background-color: var(--text-color);
    color: var(--hover-text-color) !important;
    border-color: var(--text-color) !important;
}

.image__btns-wrapper{
    display: flex;
    gap: 15px;
    justify-content: center;
}

.image__content{
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    flex-direction: column;
    text-align: center;
}

.image--left .image__content{
    height: 100%;
    left: 30px;
    transform: none;
    justify-content: flex-end;
    align-items: flex-start;
    text-align: left;
}

.image--mixed .text{
    margin-top: auto;
}

.image--mixed .image__btns-wrapper{
    margin-top: auto;
    padding-bottom: 20px;
}

@media only screen and (max-width: 740px) {
    .section-two-column-links .image {
        width: 100vw;
        height: fit-content !important;
    }

    .section-two-column-links .title{
        font-size: 30px;
    }
}

/* Add styles for the new height options */
.section-two-column-links[data-height-option="adapt"] .image {
    height: auto;
}

.section-two-column-links[data-height-option="full"] .image {
    height: 100vh;
}

.section-two-column-links[data-height-option="fixed"] .image {
    height: 70vh;
}
</style>

{% schema %}
{
  "name": "Two Column Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "select",
        "id": "height_option",
        "label": "Banner height",
        "options": [
          {
            "value": "full",
            "label": "Full height"
          },
          {
            "value": "fixed",
            "label": "Large (70vh)"
          },
          {
            "value": "adapt",
            "label": "Adapt (Adapts to biggest image aspect ratio)"
          }
        ],
        "default": "fixed"
    },
    {
        "type": "paragraph",
        "content": "We recommend using images with the same aspect ratio for best visual results."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 2,
      "settings": [
        {
          "type": "header",
          "content": "Placement"
        },
        {
          "type": "select",
          "id": "placement",
          "label": "Placement",
          "options": [
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "left",
              "label": "Left"
            }
          ]
        },
        {
          "type": "header",
          "content": "Imagen"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "text",
          "id": "text_url_1",
          "label": "Link Text 1"
        },
        {
          "type": "url",
          "id": "url_1",
          "label": "Link 1"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Text"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Title"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "hover_text_color",
          "label": "Button hover text color",
          "default": "#FFFFFF"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Banner"
    }
  ]
}
{% endschema %}
